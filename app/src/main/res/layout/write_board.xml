<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.crossit.collegeoffinearts.Tab.board.FontTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:id="@+id/write_board_name"
            android:text="팝니다"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <com.crossit.collegeoffinearts.Tab.board.FontEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/write_title"
            android:backgroundTint="#b1b1b1"
            android:hint="제목"
            android:textColorHint="#b1b1b1"
            android:textSize="20sp" />
        <com.crossit.collegeoffinearts.Tab.board.FontEditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:backgroundTint="#f5f5f5"
            android:hint="제품명,희망가격,거래희망지역,연락처(선택) 등을 입력해 주세요."
            android:textColorHint="#b1b1b1"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/write_image"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:src="@drawable/write_img" />
            <com.crossit.collegeoffinearts.Tab.board.FontTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:textColor="#b1b1b1"
                android:text="클릭하여 이미지 파일을 첨부하세요."/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layerType="software"
            android:src="@drawable/dotted"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right|center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/write_cancel" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/write_submit" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>